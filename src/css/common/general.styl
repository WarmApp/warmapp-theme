* {
    box-sizing: border-box;
}

html {
    font-family: main-font;
    font-weight: 400;
    font-size: font-size-base;
    height: 100%;
}

a {
    color: inherit;
    text-decoration: none;
}

button, input[type="submit"] {
    border: none;
}

.container {
    center(container-width);
}

.main-page {
    height: 100%;
}
