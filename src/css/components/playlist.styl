.playlist {
    margin-top: 5px;

    @extends $list-unstyled;

    &__commands {
        height: 50px;
    }

    &__item {
        position: relative;
        display: block;
        padding-top: 15px;
        padding-bottom: 15px;
        padding-left: 60px;
        border-top: 1px solid lighten(dark-gray-high, 5%);

        @extends $hover-behavior;

        &:before {
            position: absolute;
            left: 10px;
            top: 17px;
            remify(font-size, 30px);
            {i-play-button}
        }

        &.is-active {
            box-shadow: inset 0 7px 25px -7px rgba(black, 0.6);
            &:before {
                color: grapefruit-low;
                {i-pause-button}
            }
        }
    }
}

.song {
    &__title, &__author {
        display: block;
    }

    &__title {
        remify(font-size, 16px);
        font-weight: bold;
    }

    &__author {

    }

    &__avatar {
        width: 50px;
        height: auto;
        border-radius: 100%;
        position: absolute;
        right: 10px;
        top: 10px;
    }
}


.cmd {
    &__left {
        column(1/3);
    }

    &__middle {
        column(1/3);
        text-align: center;
    }

    &__right {
        column(1/3);
        text-align: right;
    }

    &__item {
        display: inline-block;

        @extends $hover-behavior;

        &:before {
            remify(font-size, 30px);
            padding: 10px;
        }

        &--next:before {
            {i-end-button}
        }

        &--prev:before {
            {i-beginning-button}
        }

        &--shuffle:before {
            {i-shuffle-button}
        }

        &--repeat:before {
            {i-repeat-button}
        }
    }
}
